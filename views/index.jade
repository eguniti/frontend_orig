doctype html 
html(lang='en')
  head
     p: img(src="/images/logo.png", width='300', height='100',class= 'centre')
     div
     h2(text-align ='centre') Nagarro's Employee Information
     table(style='border:1 solid black;margin-left:auto;margin-right:auto;width:50%')
      thead
        tr
          th(align='left',bgcolor='#96D4D4') ID
          th(align='left',bgcolor='#96D4D4') Name
          th(align='left',bgcolor='#96D4D4') Age
          th(align='left',bgcolor='#96D4D4') Address
          th(align='left',bgcolor='#96D4D4') Salary
      tbody
        each srec in employeeData
         tr
          td(text-align='left') #{srec.id}
          td(text-align='left') #{srec.name}
          td(text-align='left') #{srec.age}
          td(text-align='left') #{srec.address}
          td(text-align='left') #{srec.salary} 